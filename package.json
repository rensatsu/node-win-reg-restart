{
  "name": "@rensatsu/win-reg-restart",
  "version": "0.2.3",
  "description": "A Node.js extension for registering applications for restart on Windows",
  "main": "lib/index.js",
  "scripts": {
    "configure": "node-gyp configure",
    "rebuild": "node-gyp rebuild | tsc",
    "build": "node-gyp build | tsc",
    "format": "prettier --write \"**/*.{js,json,ts,css,html,ya?ml}\"",
    "format:check": "prettier --check \"**/*.{js,json,ts,css,html,ya?ml}\"",
    "prepack": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rensatsu/node-win-reg-restart"
  },
  "author": "Rensatsu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rensatsu/node-win-reg-restart/issues"
  },
  "homepage": "https://github.com/rensatsu/node-win-reg-restart#readme",
  "os": [
    "win32"
  ],
  "keywords": [
    "winapi",
    "windows",
    "windows-10",
    "RegisterApplicationRestart"
  ],
  "devDependencies": {
    "@types/node": "^16.6.1",
    "node-gyp": "^8.1.0",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5"
  },
  "files": [
    "index.ts",
    "binding.gyp",
    "tsconfig.ts",
    "lib/*",
    "src/*"
